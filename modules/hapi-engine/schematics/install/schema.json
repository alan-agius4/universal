{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsHapiEngineInstall",
  "title": "Hapi Engine Install Options Schema",
  "type": "object",
  "properties": {
    "clientProject": {
      "type": "string",
      "description": "Name of related client app."
    },
    "appId": {
      "type": "string",
      "format": "html-selector",
      "description": "The appId to use withServerTransition.",
      "default": "serverApp"
    },
    "serverFileName": {
      "type": "string",
      "default": "server.ts",
      "description": "The name of the Hapi server file."
    },
    "serverPort": {
      "type": "number",
      "default": 4000,
      "description": "The port for the Hapi server."
    },
    "tsconfigFileName": {
      "type": "string",
      "default": "tsconfig.server",
      "description": "The name of the TypeScript configuration file."
    },
    "appDir": {
      "type": "string",
      "format": "path",
      "description": "The name of the application directory.",
      "default": "app"
    },
    "rootModuleFileName": {
      "type": "string",
      "format": "path",
      "description": "The name of the root module file",
      "default": "app.server.module.ts"
    },
    "rootModuleClassName": {
      "type": "string",
      "description": "The name of the root module class.",
      "default": "AppServerModule"
    },
    "skipInstall": {
      "description": "Skip installing dependency packages.",
      "type": "boolean",
      "default": false
    },
    "skipServer": {
      "description": "Skip adding Hapi server file.",
      "type": "boolean",
      "default": false
    },
    "skipUniversal": {
      "description": "Skip the Angular Universal schematic",
      "type": "boolean",
      "default": false
    }
  },
  "required": [
    "clientProject"
  ],
  "additionalProperties": false
}